	private static String formatNumber(BigDecimal n, boolean isCurrency) {
		
		String res = "";
		DecimalFormat df = new DecimalFormat();
		
		if(isCurrency) {
			
		} else {
			res = df.format(n);
		}
		
		return res;
	}

